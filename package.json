{
  "private": true,
  "name": "somewhat-simple-ts-pnpm-turbo-monorepo-boilerplate",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:packages": "turbo run dev --filter=!./apps/*",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.29.0"
}